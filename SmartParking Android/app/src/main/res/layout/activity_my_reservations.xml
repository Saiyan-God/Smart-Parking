<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.example.akhil.smartparking.MyReservations">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_height="551dp"
        android:layout_width="368dp">

        <TextView
            android:text="My Reservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_title"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteY="50dp"
            tools:layout_editor_absoluteX="79dp" />

        <LinearLayout
            android:id="@+id/list_layout"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="89dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"/>

        <ListView
            android:id="@+id/list"
            android:layout_alignStart="@+id/reservation_title"
            android:layout_alignLeft="@+id/reservation_title"
            android:layout_marginTop="89dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:drawSelectorOnTop="false">
        </ListView>
    </RelativeLayout>

</ScrollView>
